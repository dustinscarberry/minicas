{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Service Categories</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/servicecategories/add">Add Category</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <table id="servicecategories-view-table" class="uk-table uk-table-hover uk-table-striped is-hidden">
          <thead>
            <tr>
              <th>Category</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            {% for category in serviceProviderCategories %}
            <tr data-id="{{ category.hashid }}">
              <td>{{ category.title }}</td>
              <td>
                <button class="btn btn-error pull-right btn-delete">Delete</button>
                <a href="/dashboard/servicecategories/{{ category.hashid }}" class="btn btn-primary pull-right">Edit</a>
              </td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

{% endblock %}
